echo "Year? "
while read year; do
  if { test "$year" -ge 1000 && test "$year" -lt 10000; } 2> /dev/null; then
    echo "Well done.\n"
    break
  else
    echo "Please enter a valid 4 digit year.\n"
  fi
done

cargo new "aoc${year}"
pushd "aoc${year}"

for i in {1..25}; do
  touch "src/day${i}.rs"
done

rm src/main.rs

mkdir lib
